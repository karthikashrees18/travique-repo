generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  latitude  Float?
  longitude Float?
  socialLink String?
  groups    Group[]  @relation("UserGroups")
  createdAt DateTime @default(now())
}

model Group {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  type        String   // interest, vibe, destination
  members     User[]   @relation("UserGroups")
  createdAt   DateTime @default(now())
}
